<body class="<%= locals[:body_class] %>">


    <header role="banner" id="header">

		<div class="wrapper">

			<!-- Logo __-->
			<h1 id="logo">
				<%= link_to logo, root_path, :id => "logo-svg-animated" %>
			</h1>

			<!-- Main menu __-->
			<nav id="mainmenu" role="navigation">

				<div id="menu-burger"><i class="icon-menu"></i></div>

				<div id="menu">
					<ul>
						<li class="<%= locals[:home_class] %>"><%= link_to("Home", root_path) %></li>
						<li class="<%= locals[:gal_class] %>"><%= link_to("Galleries", galleries_path) %></li>
						<li class="<%= locals[:pack_class] %>"><%= link_to("Packages", packages_path)%></li>
						<li class="<%= locals[:about_class] %>"><%= link_to("About", about_path) %></li>
						<li class="<%= locals[:contact_class] %>"><%= link_to("Contact", contact_path) %></li>
						<% if user_signed_in? %>
							<li><%= link_to("Logout", destroy_user_session_path, method: :delete) %></li>
						<% end%>
					</ul>
				</div>
			</nav>
		</div> <!-- END .wrapper -->

	</header>
